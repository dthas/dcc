#ifndef	_DCC_PRE_PARSE_H_
#define	_DCC_PRE_PARSE_H_

PUBLIC s32 	*p_pre_parse_state_tab;
PUBLIC s32 	pre_parse_state;




//-------------------------------------------------------------------------
// state table param  
//-------------------------------------------------------------------------
#define	PRE_PARSE_STATES		15		//

//-------------------------------------------------------------------------
// define states
//-------------------------------------------------------------------------
#define	PRE_PARSE_STATE_END	-1		// end state 
#define	PRE_PARSE_STATE1		0		// start state 
#define	PRE_PARSE_STATE2		1		// include
#define	PRE_PARSE_STATE3		2		// define
#define	PRE_PARSE_STATE4		3		// undef
#define	PRE_PARSE_STATE5		4		// line
#define	PRE_PARSE_STATE6		5		// error
#define	PRE_PARSE_STATE7		6		// pragma
#define	PRE_PARSE_STATE8		7		// if
#define	PRE_PARSE_STATE9		8		// ifdef
#define	PRE_PARSE_STATE10		9		// ifndef
#define	PRE_PARSE_STATE11		10		// elif
#define	PRE_PARSE_STATE12		11		// else
#define	PRE_PARSE_STATE13		12		// endif
#define	PRE_PARSE_STATE14		13		//
#define	PRE_PARSE_STATE15		14		//

//-------------------------------------------------------------------------
// define actions
//-------------------------------------------------------------------------
#define	PARSE_NR_ACTION			15

#define	PARSE_INCLUDE			0
#define	PARSE_DEFINE			1
#define	PARSE_UNDEF			2
#define	PARSE_LINE			3
#define	PARSE_ERROR			4
#define	PARSE_PRAGMA			5
#define	PARSE_IF			6
#define	PARSE_IFDEF			7
#define	PARSE_IFNDEF			8
#define	PARSE_ELIF			9
#define	PARSE_ELSE			10
#define	PARSE_ENDIF			11

#define	PARSE_PARAM1			12
#define	PARSE_PARAM2			13
#define	PARSE_END			14





#endif
