PUBLIC	void	empty_buf(u32 start_addr, u32 size_in_byte)
{
	u32 size= size_in_byte;
	s8 *p	= (s8*)start_addr;

	u32 i;
	for(i=0; i < size; i++)
	{
		p[i] = '\0';
	} 
}


